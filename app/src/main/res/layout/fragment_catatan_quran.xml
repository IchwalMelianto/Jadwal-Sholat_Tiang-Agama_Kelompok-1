<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background"
    tools:context=".Catatan.Fragment.CatatanQuranFragment">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ctt_quran"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:src="@drawable/quranbg"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/tv_judul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ctt_quran"
            android:layout_marginTop="15dp"
            android:text="Catatan Bacaan Al-Quran"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="26sp"
            android:textColor="@color/sand2"
            android:fontFamily="@font/montserrat_semi_bold"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/CV"
            android:layout_margin="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_judul"
            app:cardBackgroundColor="@color/semiTransparentColor"
            app:cardCornerRadius="20dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/semiTransparentColor">

                <TextView
                    android:id="@+id/tv_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="25dp"
                    android:text="Tanggal :"
                    android:textSize="22sp"
                    android:textColor="@color/sand2"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat_semi_bold"/>

                <EditText
                    android:id="@+id/et_tanggal"
                    android:layout_below="@+id/tv_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="25dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:hint="(Contoh : 25 April 1900)"
                    android:textColor="@color/sand2"
                    android:textColorHint="@color/sand2"
                    android:backgroundTint="@color/sand2"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat_light"/>

                <TextView
                    android:id="@+id/tv_2"
                    android:layout_below="@+id/et_tanggal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:text="Nama Surat :"
                    android:textSize="22sp"
                    android:textColor="@color/sand2"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat_semi_bold"/>

                <EditText
                    android:id="@+id/et_nama_surat"
                    android:layout_below="@+id/tv_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="25dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:hint="Masukkan Nama Surat"
                    android:textColor="@color/sand2"
                    android:textColorHint="@color/sand2"
                    android:backgroundTint="@color/sand2"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat_light"/>

                <TextView
                    android:id="@+id/tv_3"
                    android:layout_below="@+id/et_nama_surat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:text="Catatan :"
                    android:textSize="22sp"
                    android:textColor="@color/sand2"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat_semi_bold"/>

                <EditText
                    android:id="@+id/et_catatan"
                    android:layout_below="@+id/tv_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="25dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="30dp"
                    android:hint="Masukkan Catatan"
                    android:textColor="@color/sand2"
                    android:textColorHint="@color/sand2"
                    android:backgroundTint="@color/sand2"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat_light"/>

            </RelativeLayout>



        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/CV"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/rounded_element"
                android:text="Submit"
                android:textColor="@color/blue1"
                app:backgroundTint="@color/sand2"
                android:fontFamily="@font/montserrat_semi_bold"/>

            <Button
                android:id="@+id/btn_lihat"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/rounded_element"
                android:text="Lihat"
                android:textColor="@color/blue1"
                app:backgroundTint="@color/sand2"
                android:fontFamily="@font/montserrat_semi_bold"/>


        </LinearLayout>
    </RelativeLayout>
</ScrollView>